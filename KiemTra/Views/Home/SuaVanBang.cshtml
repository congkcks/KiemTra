@model KiemTra.Models.VanBang

@{
    ViewData["Title"] = "Sửa Văn Bằng";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<div class="container">
    <h2>@ViewData["Title"]</h2>
    
    <form method="post">
        <input type="hidden" asp-for="MaVanBang" />
        <div class="form-group">
            <label for="MaNhanVien">Nhân Viên</label>
            <select asp-for="MaNhanVien" class="form-control">
                <option value="">Chọn nhân viên</option>
                @foreach (var item in ViewBag.NhanViens)
                {
                    <option value="@item.MaNhanVien">@item.HoTen</option>
                })
            </select>
        </div>

        <div class="form-group">
            <label for="TenVanBang">Tên Văn Bằng</label>
            <input asp-for="TenVanBang" class="form-control" />
        </div>

        <div class="form-group">
            <label for="NoiCap">Nơi Cấp</label>
            <input asp-for="NoiCap" class="form-control" />
        </div>

        <div class="form-group">
            <label for="NamCap">Năm Cấp</label>
            <input asp-for="NamCap" type="number" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a href="@Url.Action("VanBang")" class="btn btn-secondary">Hủy</a>
    </form>


</div>